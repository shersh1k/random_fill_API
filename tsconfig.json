{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "lib": [
        "dom",
        "es2017"
      ],
      "sourceMap": true,
      "outDir": "./build",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noUnusedLocals": false,
      "noImplicitReturns": true,
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "build",
      "client"
    ]
  }